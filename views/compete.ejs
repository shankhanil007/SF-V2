</style>
<%- include('partials/header2'); -%> <%- include('partials/navbar'); -%>

<div class="row">
  <p id="notification" hidden></p>
  <div class="entry-modal" id="entry-modal">
    <label for="Meet ID" class="form-label">Enter meet id</label>
    <input
      type="text"
      name="id"
      id="room-input"
      placeholder="Enter Room ID"
      class="form-control room-input"
      required
    />
    <input
      type="text"
      id="user-name"
      value="<%=currentUser.name%>"
      style="display: none"
    />

    <input
      type="text"
      id="user-id"
      value="<%=currentUser._id%>"
      style="display: none"
    />

    <label for="Exercise Time" class="form-label mt-3">Exercise Time</label>
    <select id="exerciseTime" name="time" class="form-select" required>
      <option value="" selected>Choose...</option>
      <option value="0.5">30 seconds</option>
      <option value="1">1 minute</option>
      <option value="2">2 minutes</option>
      <option value="5">5 minutes</option>
      <option value="10">10 minutes</option>
    </select>

    <label for="Break Time" class="form-label mt-3">Break Time</label>
    <select id="breakTime" name="time" class="form-select" required>
      <option value="" selected>Choose...</option>
      <option value="0.3">18 seconds</option>
      <option value="0.5">30 seconds</option>
      <option value="1">1 minutes</option>
      <option value="2">2 minutes</option>
      <option value="4">4 minutes</option>
    </select>

    <div class="mt-3">
      <div>
        <input
          class="form-check-input"
          type="checkbox"
          value="lifting"
          id="lifting"
        />
        <label class="form-check-label" for="check1"> Lifting </label>
      </div>

      <div>
        <input
          class="form-check-input"
          type="checkbox"
          value="skipping"
          id="skipping"
        />
        <label class="form-check-label" for="check1"> Skipping </label>
      </div>

      <div>
        <input
          class="form-check-input"
          type="checkbox"
          value="situps"
          id="situps"
        />
        <label class="form-check-label" for="check1"> Sit Ups </label>
      </div>

      <div>
        <input class="form-check-input" type="checkbox" />
        <label class="form-check-label" for="check1"> Push Ups </label>
      </div>
    </div>

    <div class="mt-3">
      <button class="btn btn-primary" onclick="createRoom()">
        Create Room
      </button>
      <button class="btn btn-primary" onclick="joinRoom()">Join Room</button>
    </div>
  </div>
</div>

<div id="meetArea" style="display: none">
  <div class="row" id="exerciseDetails">
    <div class="col-md-4">
      <div class="row">
        <div class="col-md-6 pt-5">
          <center>
            <h4>Timer</h4>
            <h5 id="timer">00:00</h5>
          </center>
        </div>
        <div class="col-md-6 pt-5">
          <center>
            <h4 id="exerciseType">Exercise</h4>
            <h5 id="result">Count : 0</h5>
          </center>
        </div>
      </div>
    </div>
    <div class="col-md-4 d-flex justify-content-center">
      <img class="img-thumbnail" id="image" src="/assets/img/1.jpg" />
    </div>
    <div class="col-md-4 d-flex align-items-center justify-content-center">
      <button
        class="btn btn-primary"
        id="startgame"
        onclick="startgameHOST()"
        style="display: none"
      >
        Start Game
      </button>
      <!-- <button class="btn btn-primary m-3" onclick="lifting()">Lifting</button>
      <button class="btn btn-primary m-3" onclick="skipping()">Skipping</button>
      <button class="btn btn-primary m-3" onclick="complete()">Complete</button> -->
    </div>
  </div>

  <div class="row">
    <div
      class="col-md-6"
      style="display: flex; align-items: center; justify-content: center"
    >
      <div>
        <video id="local-video" style="display: true; width: 500px"></video>
        <canvas
          class="output_canvas"
          width="500px"
          height="450px"
          style="display: none"
        ></canvas>
        <br />
        <button class="btn btn-primary mb-2" onclick="model()">
          Load Model
        </button>
      </div>
    </div>
    <div class="col-md-6 d-flex justify-content-center">
      <div id="video-grid" class="d-flex"></div>
    </div>
  </div>

  <div class="row mt-5">
    <div class="col-md-6">
      <h4>Scoreboard:</h4>
      <center>
        <div class="canvas-wrapper">
          <table id="leaderboard" class="table table-striped">
            <thead class="success">
              <tr>
                <th>Name</th>
                <th>Points</th>
              </tr>
            </thead>
          </table>
          <h4 class="mt-5" id="winner"></h4>
        </div>
      </center>
    </div>
    <div class="col-md-8">
      <!-- Remote Video Element-->
    </div>
  </div>
</div>

